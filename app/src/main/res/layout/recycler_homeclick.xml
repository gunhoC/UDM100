<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:background="#484851"
    android:orientation="vertical"
    android:scrollbarFadeDuration="0"
    android:scrollbarSize="5dp"
    android:paddingLeft="3dp"
    android:paddingTop="3dp"
    android:paddingEnd="3dp"
    android:paddingRight="3dp"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingRight="3dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="2dp"
            android:background="@color/colorBackground"
            android:text=" Mechani"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="110dp"
            android:layout_height="20sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="36dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:text="OEE"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_click_oee" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="95dp"
            android:background="@color/colorBackground"
            android:text="시간가동률"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_Aa"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="30dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:text="숫자"
            android:textColor="#A5E4A9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="95dp"
            android:background="@color/colorBackground"
            android:text="성능가동률"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/tv_Qq"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:text="숫자"
            android:textColor="#CCD675"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Pp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_Pp"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:text="숫자"
            android:textColor="#7CECDB"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Aa"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:background="@color/colorBackground"
            android:text="양품률"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/tv_click_oee"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="135dp"
            android:layout_height="145dp"
            android:layout_marginStart="5dp"

            android:layout_marginBottom="8dp"
            android:background="@color/colorBackground"
            android:max="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"></com.github.mikephil.charting.charts.PieChart>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>